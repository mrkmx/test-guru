<h1><%= @test.title %></h1>
<p>Уровень сложности: <%= @test.level %></p>
<p>Автор: <%= @test.author.name %></p>
<h2>Вопросы:</h2>
<table>
  <thead>
    <tr>
      <th>Вопрос</th>
      <th colspan="3">Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @test.questions.each do |q| %>
      <tr>
        <td><%= q.body %></td>
        <td><%= link_to 'Просмотр', question_path(q) %></td>
        <td><%= link_to 'Редактировать', edit_question_path(q) %></td>
        <td><%= link_to 'Удалить', question_path(q), method: :delete, data: { confirm: 'Уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <p><%= link_to 'Добавить новый вопрос', new_test_question_path(@test) %></p>
  <p><%= link_to 'Назад', tests_path %></p>
</div>
