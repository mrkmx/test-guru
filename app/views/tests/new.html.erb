<h1>Создать новый тест</h1>

<%= form_with model: @test, local: true do |f| %>
  <div class="field">
    <div><%= f.label :test_title %></div>
    <div><%= f.text_field :title, id: :test_title %></div>
  </div>
  <div class="field">
    <div><%= f.label :test_level %></div>
    <div><%= f.number_field :level, id: :test_level %></div>
  </div>
  <div class="field">
    <div><%= f.label :category_id %></div>
    <div><%= f.collection_select :category_id, Category.all, :id, :title, prompt: true %></div>
  </div>
  <div class="field">
    <div><%= f.label :author_id %></div>
    <div><%= f.collection_select :author_id, User.all, :id, :name, prompt: true %></div>
  </div>
  <div class="field">
    <%= f.submit %>
  </div>
<% end %>
<div>
<p><%= link_to 'Назад', tests_path %></p>
</div>