<h1>Тесты</h1>
<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Уровень</th>
      <th>Количество вопросов</th>
      <th colspan="3">Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |t| %>
      <tr>
        <td><%= t.title %></td>
        <td><%= t.level%></td>
        <td><%= t.questions.count %></td>
        <td><%= link_to 'Просмотр', test_path(t) %></td>
        <td><%= link_to 'Редактировать', edit_test_path(t) %></td>
        <td><%= link_to 'Удалить', test_path(t), method: :delete, data: { confirm: 'Уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <p><%= link_to 'Создать новый тест', new_test_path %></p>
</div>
