<h1><%= @test.title %></h1>
<p><%= t('.level') %>: <%= @test.level %></p>
<p><%= t('.author') %>: <%= @test.author.first_name %></p>
<h2><%= t('.questions') %>:</h2>
<table>
  <thead>
    <tr>
      <th><%= t('.question') %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @test.questions.each do |q| %>
      <tr>
        <td><%= q.body %></td>
        <td><%= link_to t('.show'), admin_question_path(q) %></td>
        <td><%= link_to t('.edit'), edit_admin_question_path(q) %></td>
        <td><%= link_to t('.delete'), admin_question_path(q), method: :delete, data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <p><%= link_to t('.new_question'), new_admin_test_question_path(@test) %></p>
  <p><%= link_to t('.back'), admin_tests_path %></p>
</div>
