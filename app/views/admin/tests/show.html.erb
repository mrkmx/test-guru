<div class="container mb-5">
  <h1><%= @test.title %></h1>
  
  <ul>
    <li><%= t('.level') %>: <%= @test.level %></li>
    <li><%= t('.author') %>: <%= @test.author.first_name %></li>
  </ul>
  
  <h2><%= t('.questions') %>:</h2>
  
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th><%= t('.question') %></th>
        <th><%= t('.actions') %></th>
      </tr>
    </thead>
    <tbody>
      <% @test.questions.each do |q| %>
        <tr>
          <td><%= q.body %></td>
          <td>
            <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with action button groups">
              <div class="btn-group mr-2" role="group" aria-label="Safe Actions Group">
                <%= link_to t('.show'), admin_question_path(q), class: 'btn btn-light' %>
                <%= link_to t('.edit'), edit_admin_question_path(q), class: 'btn btn-light' %>
              </div>
              <div class="btn-group" role="group" aria-label="Unsafe Actions Group">
                <%= link_to t('.delete'), admin_question_path(q), method: :delete, data: { confirm: t('.confirm') }, class: 'btn btn-danger' %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <%= link_to t('.back'), admin_tests_path, class: "btn btn-link" %>
    <%= link_to t('.new_question'), new_admin_test_question_path(@test), class: "btn btn-primary" %>
  </div>
</div>