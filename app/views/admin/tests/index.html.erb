<div class="container mb-5">
  <h1><%= t('.header') %></h1>
  <%= render 'shared/errors', resource: @test %>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th class="js-sort-by-title pointer">
          <%= t('.name') %>
          <%= octicon "arrow-up", class: "text-success hide" %>
          <%= octicon "arrow-down", class: "text-success hide" %>
        </th>
        <th><%= t('.level') %></th>
        <th><%= t('.questions') %></th>
        <th><%= t('.actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tests %>
    </tbody>
  </table>
  <div>
    <%= link_to t('.new_test'), new_admin_test_path, class: "btn btn-primary" %>
  </div>
</div>
