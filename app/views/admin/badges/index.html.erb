<div class="container mb-5">
  <h1><%= t('.header')%></h1>
  <table class="table">
    <thead>
      <th>Название</th>
      <th>Иконка</th>
      <th>Правило</th>
      <th colspan="3">Действия</th>
    </thead>
    <tbody>
    <% @badges.each do |badge| %>
      <tr>
        <td><%= badge.title %></td>
        <td><%= image_tag(badge.image, size: 60) %></td>
        <td><%= badge.rule %></td>
        <td>
          <%= link_to t('.show'), admin_badge_url(badge) %>
          <%= link_to t('.edit'), edit_admin_badge_url(badge) %>
          <%= link_to t('.delete'), admin_badge_url(badge),
                          method: :delete, data: { confirm: 'Уверены?' }%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to t('.new_badge'), new_admin_badge_path, class: "btn btn-primary" %>
</div>
