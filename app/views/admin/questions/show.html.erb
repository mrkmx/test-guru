<h1>Вопрос теста <%= @question.test.title %></h1>
<p><%= @question.body %></p>
<h2>Ответы</h2>
<table>
  <thead>
    <th>Тело ответа</th>
    <th>Правильный?</th>
    <th colspan="3">Действия</th>
  </thead>
  <tbody>
    <%= render @question.answers %>
  </tbody>
</table>
<div>
  <p>
    <%= link_to 'Новый ответ', new_admin_question_answer_path(@question) %>
  </p>
  <p>
    <%= link_to 'Назад', admin_test_path(@question.test) %>
  </p>
</div>
